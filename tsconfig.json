{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",                                 
    "module": "CommonJS",                               
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           

    /* Emit */
    "declaration": true,                               
    "declarationMap": true,                          
    "sourceMap": true,                                  
    "outDir": "./dist",                              
    "removeComments": true,                            
    "inlineSources": true,                             

    /* Type Checking */
    "strict": true,                                
    "skipLibCheck": true,                               
    /* Modules */
    "moduleResolution": "node",                      
    "baseUrl": "./",                                    
    "paths": {                                         
      "@/*": ["src/*"]
    },

    /* Completeness */
    "resolveJsonModule": true                           
  },
  "include": ["src/**/*"],                               
  "exclude": ["node_modules", "dist"]                   
}
